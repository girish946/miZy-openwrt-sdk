#!/bin/sh

## hyphop ##

. ./,config 

[ -f $squash_src ] || {
    wget -c -O ../$ow_sdk.tar.bz2 $ow_base/$ow_sdk.tar.bz2
    tar -xf ../$ow_sdk.tar.bz2

    rm -rf $ow_sdk/staging_dir/$tc_ow
    ln -s ../../../$tc $ow_sdk/staging_dir/$tc_ow

    mksquashfs $ow_sdk $squash_src -comp xz

    rm -rf $ow_sdk
    rm ../$ow_sdk.tar.bz2
}

[ -f $squash_src ] && {

    echo "[i] ok $squash_src found" >&2

}

